              "templateHash": "75410827106003442"
            }
          },
          "parameters": {
            "solutionName": {
              "type": "string",
              "metadata": {
                "description": "Specifies the location for resources."
              }
            },
            "solutionLocation": {
              "type": "string"
            },
            "resourceGroupName": {
              "type": "string"
            },
            "baseUrl": {
              "type": "string"
