              "sku": {
                "name": "Y1",
                "tier": "Dynamic"
              }
            },
            {
              "type": "Microsoft.Web/sites",
              "apiVersion": "2022-03-01",
              "name": "[variables('functionAppName')]",
              "location": "[parameters('solutionLocation')]",
              "kind": "functionapp",
              "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', 'function-app-plan')]",
                "siteConfig": {
                  "linuxFxVersion": "[format('DOCKER|{0}/{1}', reference(resourceId('Microsoft.ContainerRegistry/registries', variables('registryName')), '2023-01-01-preview').loginServer, variables('imageName'))]",
                  "appSettings": [
                    {
                      "name": "WEBSITES_PORT",
                      "value": "80"
                    },
                    {
                      "name": "DOCKER_REGISTRY_SERVER_URL",
                      "value": "[format('https://{0}', reference(resourceId('Microsoft.ContainerRegistry/registries', variables('registryName')), '2023-01-01-preview').loginServer)]"
                    }
                  ]
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', 'function-app-plan')]"
